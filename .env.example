# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_for_testing

# Database Configuration
DATABASE_URL=sqlite:///weather_bot.db
# For PostgreSQL: postgresql://username:password@localhost/weather_bot

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Bot Configuration
COMMAND_PREFIX=/
DEFAULT_TIMEZONE=Asia/Tokyo

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=300

# API Rate Limiting
JMA_API_RATE_LIMIT=60
GEMINI_API_RATE_LIMIT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=weather_bot.log