# Docker環境用の設定ファイル
# このファイルをコピーして.envとして使用してください

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_for_testing

# Database Configuration
# SQLiteを使用する場合
DATABASE_URL=sqlite:///data/weather_bot.db

# PostgreSQLを使用する場合は以下の設定を有効にしてください
# USE_POSTGRES=true
# POSTGRES_DB=weather_bot
# POSTGRES_USER=weather_user
# POSTGRES_PASSWORD=secure_password
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Bot Configuration
COMMAND_PREFIX=/
DEFAULT_TIMEZONE=Asia/Tokyo

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=300

# API Rate Limiting
JMA_API_RATE_LIMIT=60
GEMINI_API_RATE_LIMIT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/weather_bot.log

# Redis Configuration (for production)
# REDIS_PASSWORD=secure_redis_password

# Security Configuration (for production)
# SECRET_KEY=your_very_secure_secret_key_here

# Monitoring Configuration (for production)
# GRAFANA_PASSWORD=secure_grafana_password

# Environment
ENVIRONMENT=development